---
import { Image } from 'astro:assets';
import FormattedDate from '../components/FormattedDate.astro';

type Props = {
	href: string,
	img: string,
	title: string;
	date: Date;
	time: number;
};

const { href, img, title, date, time } = Astro.props;
---
<style>
	.card {
		display: block;
		text-decoration: none;
	}

	.card__title {
		margin-block-start: var(--space-s);
		text-wrap: balance;
	}

	.card__info {
		margin: var(--space-3xs);
		font-size: var(--step--1);
	}
	.card__date {
		
	}

	.card__time {
		position: relative;
		margin-inline-start: var(--space-xs);

		&::before {
			content: 'â€¢';
			position: absolute;
			left: -12px;
		}
	}
</style>
<a class="card media-element" href={href}>
	<Image
		width={900}
		height={360}
		src={img}
		alt=""
	/>
	<h2 class="card__title">{title}</h2>
	<div class="card__info">
		<date class="card__date">
			<FormattedDate date={date} />
		</date>
		<span class="card__time">{time}min to read</span>
	</div>
</a>